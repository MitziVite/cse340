<h1>Add Classification</h1>
<form action="/inv/add-classification" method="POST">
    <div class="form-group">
        <label for="classificationName">Classification Name:</label>
        <input type="text" id="classificationName" name="classificationName" required>
    </div>
    <div class="form-group">
        <button type="submit">Add Classification</button>
    </div>
</form>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const form = document.querySelector("form");
        form.addEventListener("submit", function(event) {
            const classificationName = document.querySelector("#classificationName").value;
            const regex = /^[a-zA-Z0-9]+$/;

            if (!regex.test(classificationName)) {
                event.preventDefault();
                alert("Classification name cannot contain spaces or special characters.");
            }
        });
    });
</script>
