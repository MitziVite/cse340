<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { %>
    <%- res.redirect('/') %>
<% } %>

<h1>You're Logged In</h1>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li>
                <%= error.msg %>
            </li>
        <% }) %>
    </ul>
<% } %>

<div class="accountManagement">
    <h2>Welcome, <%- locals.accountData.account_firstname %></h2>
    <p>Do you want to update your account information? Click the button below.</p>
    <button class="manage" onclick="location.href='/account/update/<%= locals.accountData.account_id %>'">
        Update Access Information
    </button>
    
 
    <% if(locals.accountData.account_type==="Admin" || locals.accountData.account_type==="Employee" ) { %>
 
        <h3>Inventory Management</h3>
        <p> <a href="/inv/">Vehicle Management</a></p>
        <% } %>
</div>